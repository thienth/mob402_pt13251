<div class="container">
    
    <section class="content-sp-moi">
        <h2>Sản phẩm mới</h2>
        <div class="row">
            {{#each products}}
            <div class="col-sm-3 item">
                <div class="card" style="width: 100%;">
                    <img src="{{image}}" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">
                            <a href="/chi-tiet/{{_id}}">{{name}}</a>
                        </h5>
                        <p>
                            <span class="price text-danger">{{price}}đ</span>
                            <span class="ori-price">{{old_price}}đ</span>
                        </p>
                        <div class="text-right">
                            <a href="/chi-tiet/{{_id}}" class="btn btn-primary">Chi tiết</a>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </section>

</div>